# WorkflowForge Environment Configuration

# Application Environment (development, testing, staging, production)
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true  # Set to false in production
API_RELOAD=true  # Set to false in production

# Database Configuration
DATABASE_URL=workflows.db  # Use SQLite for development
# For production, use a proper database URL:
# DATABASE_URL=postgresql://user:password@localhost:5432/workflowforge

# CORS Configuration
# For development, allow all origins with "*"
# For production, specify exact allowed origins (comma-separated):
# CORS_ALLOWED_ORIGINS=https://workflowforge.com,https://app.workflowforge.com

# Rate Limiting
# RATE_LIMIT_ENABLED=true  # Enable in production
# RATE_LIMIT_PER_MINUTE=60  # Requests per minute

# Workflow Execution
USE_MOCK_WORKFLOW=true
WORKFLOW_TIMEOUT=30.0
WORKFLOW_MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security
SECRET_KEY=supersecretkey  # Change this in production!

# LLM Integration (for future use)
# OPENAI_API_KEY=your_key_here
# ANTHROPIC_API_KEY=your_key_here 